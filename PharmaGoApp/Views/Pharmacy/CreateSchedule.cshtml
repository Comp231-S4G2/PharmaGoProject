@model PharmaGoApp.Models.Pharmacy.AddSlotViewModel

@{
    ViewData["Title"] = "CreateSchedule";
}

<h2>Create New Schedule</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateSchedule">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group hidden">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScheduleStartTime" class="control-label"></label>
                <input asp-for="ScheduleStartTime" class="form-control" />
                <span asp-validation-for="ScheduleStartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScheduleEndTime" class="control-label"></label>
                <input asp-for="ScheduleEndTime" class="form-control" />
                <span asp-validation-for="ScheduleEndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create New Schedule" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetSchedules">Back to List</a>
</div>

