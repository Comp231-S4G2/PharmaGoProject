@model IEnumerable<PharmaGoApp.Models.Pharmacy.PrescriptionValidateViewModel>

@{
    ViewData["Title"] = "GetPrescriptions";
}

<h2>GetPrescriptions</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FilePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="@Url.Content(item.FilePath.Trim())"/>
                @*@Html.DisplayFor(modelItem => item.FilePath)*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerId)
            </td>
            <td>
                @Html.ActionLink("Approve", "ApprovePrescription", new { id=item.PrescriptionId}) |
                @Html.ActionLink("Reject", "RejectPrescription", new { id = item.PrescriptionId })
            </td>
        </tr>
}
    </tbody>
</table>
